@model RegisterVm
<h2>Регистрация</h2>
<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="mb-3"><label asp-for="Email"></label><input asp-for="Email" class="form-control" /></div>
    <div class="mb-3"><label asp-for="Password"></label><input asp-for="Password" class="form-control" /></div>
    <div class="mb-3"><label asp-for="ConfirmPassword"></label><input asp-for="ConfirmPassword" class="form-control" /></div>
    <button class="btn btn-primary">Создать аккаунт</button>
</form>
