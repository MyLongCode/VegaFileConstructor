@model Generation
<h2>Детали генерации</h2>
<div class="card"><div class="card-body">
<p><b>Шаблон:</b> @Model.Template?.Name (v@Model.Template?.Version)</p>
<p><b>Статус:</b> @Model.Status</p>
@if (Model.Status == GenerationStatus.Failed)
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}
<h5>Введенные значения</h5>
<ul>
@foreach (var val in Model.FieldValues)
{
    <li><b>@val.FieldKey:</b> @val.Value</li>
}
</ul>
@if (Model.Status == GenerationStatus.Generated)
{
    <a class="btn btn-success btn-lg" asp-action="Download" asp-route-id="@Model.Id">Скачать PDF</a>
}
<a class="btn btn-outline-primary" asp-controller="DocumentWizard" asp-action="Step1">Создать ещё</a>
<a class="btn btn-secondary" asp-action="Index">Перейти в историю</a>
</div></div>
