<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Vega File Constructor</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
    <div class="container">
        <a class="navbar-brand" asp-controller="Home" asp-action="Index">VegaFileConstructor</a>
        <div class="navbar-nav me-auto">
            <a class="nav-link" asp-controller="DocumentWizard" asp-action="Step1">Создать документ</a>
            <a class="nav-link" asp-controller="Generations" asp-action="Index">История</a>
        </div>
        <div>
            @if (User.Identity?.IsAuthenticated == true)
            {
                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                    <button class="btn btn-outline-light btn-sm">Выход</button>
                </form>
            }
            else
            {
                <a class="btn btn-outline-light btn-sm" asp-controller="Account" asp-action="Login">Вход</a>
                <a class="btn btn-light btn-sm" asp-controller="Account" asp-action="Register">Регистрация</a>
            }
        </div>
    </div>
</nav>
<div class="container">
    @RenderBody()
</div>
</body>
</html>
